<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <de.tu_dresden.et.kva_monitor.ShapeTankView
        android:id="@+id/source_tank_view"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginStart="8dp"
        android:layout_weight="2">

    </de.tu_dresden.et.kva_monitor.ShapeTankView>

    <de.tu_dresden.et.kva_monitor.PipeView
        android:id="@+id/left_pipe_view"
        android:layout_width="16dp"
        android:layout_height="match_parent" />

    <de.tu_dresden.et.kva_monitor.ShapePumpView
        android:id="@+id/pump_view"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2">

    </de.tu_dresden.et.kva_monitor.ShapePumpView>

    <de.tu_dresden.et.kva_monitor.PipeView
        android:id="@+id/right_pipe_view"
        android:layout_width="16dp"
        android:layout_height="match_parent" />

    <de.tu_dresden.et.kva_monitor.ShapeTankView
        android:id="@+id/target_tank_view"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginEnd="8dp"
        android:layout_weight="2" />



</LinearLayout>